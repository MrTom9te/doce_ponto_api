generator client {
  provider      = "prisma-client"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  phone     String
  createdAt DateTime @default(now())

  store Store? // Um usuário pode ser dono de uma loja

  @@map("users")
}

// NOVO MODELO PARA GERENCIAR CADA LOJA INDIVIDUALMENTE
model Store {
  id          String  @id @default(uuid())
  name        String
  slug        String  @unique // URL amigável, ex: "bolos-da-maria"
  ownerId     String  @unique
  owner       User    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // --- Campos de Endereço da Loja ---
  street       String?
  number       String?
  neighborhood String?
  city         String?
  state        String?
  zipCode      String?
  complement   String?

  // --- Opções de Entrega da Loja ---
  supportedDeliveryTypes DeliveryType[] @default([DELIVERY, PICKUP])

  // Campos para a futura customização da loja
  logoUrl     String?
  themeColor  String? @default("#8A2BE2") // Um roxo como padrão
  layoutStyle String? @default("grid")
  fontFamily  String? @default("Inter")

  isActive     Boolean @default(false)
  isOpen       Boolean @default(false)
  openingHours Json?

  products Product[]
  orders   Order[]

  @@map("stores")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Decimal
  imageUrl    String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // AGORA O PRODUTO PERTENCE A UMA LOJA
  storeId String
  store   Store  @relation(fields: [storeId], references: [id], onDelete: Cascade)

  orders Order[]

  @@map("produtos")
}

model Order {
  id            String      @id @default(uuid())
  orderNumber   String      @unique
  customerName  String
  customerPhone String
  customerEmail String
  customerTaxId String
  productName   String
  quantity      Int
  unitPrice     Decimal
  totalPrice    Decimal
  deliveryDate  DateTime
  deliveryTime  String
  observations  String?     @db.Text
  status        OrderStatus @default(pending)

  deliveryType DeliveryType @default(DELIVERY)

  street       String?
  number       String?
  neighborhood String?
  city         String?
  state        String?
  zipCode      String?
  complement   String?

  paymentProviderId String? @unique
  paymentUrl        String? @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  productId String
  product   Product @relation(fields: [productId], references: [id])

  // AGORA O PEDIDO PERTENCE A UMA LOJA
  storeId String
  store   Store  @relation(fields: [storeId], references: [id], onDelete: Cascade)

  anonId           String?
  orderAccessCode  String?  @unique

  @@map("pedidos")
}

enum DeliveryType {
  DELIVERY //entrega
  PICKUP //buscar no local
}

enum OrderStatus {
  pending
  confirmed
  production
  ready
  delivered
  cancelled
}

model AnonymousSession {
  id           String   @id @default(uuid())
  tokenVersion Int      @default(1)
  userAgent    String?
  createdAt    DateTime @default(now())
  lastSeen     DateTime @default(now())
  revoked      Boolean  @default(false)

  @@map("anonymous_sessions")
}

