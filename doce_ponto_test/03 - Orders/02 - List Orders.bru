get {
  url: {{baseUrl}}/orders
  auth: bearer
}

auth:bearer {
  token: {{authToken}}
}

script:post-response {
  // Nada para salvar aqui, apenas testar a resposta
}

tests {
  test("Listagem de pedidos deve ser bem-sucedida", function() {
    const body = res.getBody();

    // 1. Verifica o código de status
    expect(res.status).to.equal(200);

    // 2. Verifica a estrutura da resposta
    expect(body.success).to.be.true;
    expect(body.data).to.be.an('array');
    expect(body.total).to.be.a('number');
    expect(body.page).to.be.a('number');

    // 3. Garante que a lista não está vazia (assumindo que o pedido público foi criado)
    expect(body.data.length).to.be.greaterThan(0);

    // 4. Verifica se o pedido criado no passo anterior está na lista
    const createdOrder = body.data.find(o => o.id === bru.getVar("orderId"));
    expect(createdOrder).to.not.be.null;
    expect(createdOrder.customerName).to.equal("Cliente de Teste Automatizado");
    expect(createdOrder.status).to.equal("pending"); // Deve estar no status inicial
    expect(createdOrder.productId).to.equal(bru.getVar("publicProductId"));
  });

  test("Listagem de pedidos com filtro de status (exemplo)", function() {
